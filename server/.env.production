# ============================================
# AUTOFLOW PRO - PRODUCTION ENVIRONMENT
# ============================================

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (Neon PostgreSQL)
# Replace with your actual Neon production database URL
DATABASE_URL=postgresql://autoflow_owner:your-actual-password@your-neon-host.neon.tech/autoflow?sslmode=require
DB_HOST=your-neon-host.neon.tech
DB_PORT=5432
DB_NAME=autoflow
DB_USER=autoflow_owner
DB_PASSWORD=your-actual-database-password

# JWT Configuration
# IMPORTANT: Generate a strong secret for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-actual-jwt-secret-min-64-characters-long-random-string
JWT_EXPIRES_IN=7d

# M-Pesa Daraja API - PRODUCTION CREDENTIALS
# Get these from https://developer.safaricom.co.ke
MPESA_ENVIRONMENT=production
MPESA_CONSUMER_KEY=9t9EdgWDctNpDwCAlWudZNG1GRtX5VVGu1S1EJ8cSiX9D9kU
MPESA_CONSUMER_SECRET=n8YrAg9UsNoUYXdxtJxWjWnmiHYK2aGJn12wfyqbgx3kzUstN4hAIS11K4KV49sw
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your-production-passkey-from-daraja-portal
MPESA_CALLBACK_URL=https://your-production-domain.com/api/payments/mpesa/callback

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-business-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=AutoFlow Pro <noreply@autoflowpro.co.ke>

# CORS Configuration
# Add your production frontend URL
CORS_ORIGIN=https://your-production-domain.vercel.app,https://autoflowpro.co.ke

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Frontend URL (for links in emails, etc.)
FRONTEND_URL=https://your-production-domain.vercel.app

# Application Configuration
APP_NAME=AutoFlow Pro
APP_URL=https://autoflowpro.co.ke
SUPPORT_EMAIL=support@autoflowpro.co.ke

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET=your-session-secret-min-32-characters-long

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/production.log

